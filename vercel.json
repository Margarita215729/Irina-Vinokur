{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "cd client && npm ci && npm run build",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "runtime": "nodejs18.x"
        }
    }
}